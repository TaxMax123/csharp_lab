@page "/order"
@page "/order/{id:int}"
@using BankApp.Shared
@using BankApp.Shared.Dto
@inject IUniversalOrderService _universalOrderService;

@if (Id == null)
{
    <PageTitle>Create New Order</PageTitle>
    <h3>Create New Order</h3>
}
else
{
    <PageTitle>Edit @order.Id</PageTitle>
    <h3>Edit @order.Id</h3>
}


@code {
    [Parameter]
    public int? Id { get; set; }

    UniversalOrderGetDto order =  new();

    protected override async void OnParametersSet()
    {
        if (Id == null)
        {
            //Create
        }
        else
        {
            order = await _universalOrderService.GetOrderById((int)Id);
        }
    }

}